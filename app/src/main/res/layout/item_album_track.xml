<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/item_track_card"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent">

        <TextView
            android:id="@+id/item_track_title"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_album_art"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/item_album_title"
            android:layout_toEndOf="@+id/item_track_no"
            android:text="Song Title"
            android:textColor="@color/content_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:translationX="10dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/item_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:text="0:00"
            android:textColor="@color/content_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_track_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="5dp"
            android:text="00."
            android:textColor="@color/content_text_color"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>